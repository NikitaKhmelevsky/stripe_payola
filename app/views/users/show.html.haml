- provide(:title, @user.full_name)
.row
  .col-md-6
    %table.table
      %thead
        %th Avatar
        %th Name
      %tbody
        %tr
          %td
            - if current_user.avatar.url.present?
              = image_tag(@user.avatar.url)
          %td= @user.full_name
= link_to 'Edit profile', edit_user_registration_path
